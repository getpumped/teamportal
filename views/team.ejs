 <% layout('layouts/default') %>
 <h1><%= team.teamname %></h1>
      <div class="row">
        <div class="span4">
          <div class="well well-plain">
            <h3>Activity Log</h3>
            <table class="table table-condensed">
              <thead>
                <tr>
                  <th class="span3">Date</th>
                  <th class="span7">Activity</th>
                  <th class="span2">Mileage</th>
                </tr>
              </thead>
              <tbody>
              <% for(i=0;i<logs.length;i++) { %>
                <tr>
                  <td><%= dateFormater(logs[i].date, "dd/mm/yyyy") %></td>
                  <td><%= logs[i].logtype %></td>
                  <td><%= logs[i].mileage %>m</td>
                </tr>
              <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="span4">
          <div class="well well-plain">
            <% include ./snippets/overall-leaderboard %>
          </div>
        </div>
        <div class="span4">
          <div class="well well-plain">
            <% include ./snippets/team-leaderboard %>
          </div>
      </div>
    </div>